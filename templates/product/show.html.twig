{% extends 'dashboard.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
<div class="content">
    <h1 class="text-center title">Gestion des produits</h1>
    <div class="row">
        <div class="col-lg-8 ml-auto mr-auto">
            <div class="row">
                <h1>Product</h1>

                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ product.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ product.name }}</td>
                        </tr>
                        <tr>
                            <th>Barcode</th>
                            <td>{{ product.barcode }}</td>
                        </tr>
                        <tr>
                            <th>Provider</th>
                            <td>{{ product.provider }}</td>
                        </tr>
                        <tr>
                            <th>Stock</th>
                            <td>{{ product.stock }}</td>
                        </tr>
                        <tr>
                            <th>Entries</th>
                            <td>{{ product.entries }}</td>
                        </tr>
                        <tr>
                            <th>Exits</th>
                            <td>{{ product.exits }}</td>
                        </tr>
                        <tr>
                            <th>Min_alert</th>
                            <td>{{ product.minAlert }}</td>
                        </tr>
                        <tr>
                            <th>Max_alert</th>
                            <td>{{ product.maxAlert }}</td>
                        </tr>
                    </tbody>
                </table>

                <a href="{{ path('product_index') }}">back to list</a>

                <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>

                {{ include('product/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
